{
    "manifest_version": 3,
    "version": "1.0",
    "name": "vue-crx-template",
    "description": "vue-crx-template description.",
    "author": "kiccer<1072907338@qq.com>",
    
    "action": {
        "default_icon": {
            "16": "./favicon.png",
            "48": "./favicon.png",
            "128": "./favicon.png"
        },
        "default_title": "test",
        "default_popup": "./popup.html"
    },

    "icons": {
        "16": "./favicon.png",
        "48": "./favicon.png",
        "128": "./favicon.png"
    },

    "background": {
        "service_worker": "./js/background.js"
    },
    
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "css": [
            "./css/content.css"
        ],
        "js": [
            "./js/content.js"
        ]
    }],

    "options_page": "options.html",

    "permissions": []
}